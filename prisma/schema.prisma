generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://docker:docker@localhost:5432/api_express_prisma"
}

model Usuario {
  id String @id @default(uuid())
  nome String
  cpf String
  telefone String
  senha String
  @@map("usuario")
}

model Admin {
  id String @id @default(uuid())
  nome String
  cpf String
  senha String
  @@map("admin")
}

model Entrega {
    id String @id @default(uuid())
    endereco String
    entregue  Boolean
    devolvida  Boolean
    @@map("entrega")
}

model Destinatario {
    id String @id @default(uuid())
    nome String
    telefone String
    endereco String
    CEP String
    @@map("destinatario")
}